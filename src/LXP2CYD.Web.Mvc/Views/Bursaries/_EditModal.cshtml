@using LXP2CYD.Web.Startup
@model LXP2CYD.Web.Models.Bursaries.EditBursaryModalViewModel

@{ ViewData["Title"] = "EditBursary";
    Layout = "~/Views/Shared/_UserAdminLayout.cshtml"; }

<h1>EditBursary</h1>

<h4>Bursary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBursary">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Bursary.Id" />

            <div class="form-group">
                <label asp-for="@Model.Bursary.Title" class="control-label"></label>
                <input asp-for="@Model.Bursary.Title" class="form-control" />
                <span asp-validation-for="@Model.Bursary.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Bursary.CompanyName" class="control-label"></label>
                <input asp-for="@Model.Bursary.CompanyName" class="form-control" />
                <span asp-validation-for="@Model.Bursary.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Bursary.Link" class="control-label"></label>
                <input asp-for="@Model.Bursary.Link" class="form-control" />
                <span asp-validation-for="@Model.Bursary.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Bursary.DocumentUrl" class="control-label"></label>
                <input asp-for="@Model.Bursary.DocumentUrl" class="form-control" />
                <span asp-validation-for="@Model.Bursary.DocumentUrl" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListBursaries">Back to List</a>
</div>

