@using LXP2CYD.Web.Startup
@using Abp.Authorization.Users
@using LXP2CYD.Web.Models.Users
@model EditUserModalViewModel
@{
    ViewBag.Title = L("Users");
    ViewBag.CurrentPageName = PageNames.Users;
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>User Profile</h1>
            </div>

        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row display-flex ml-1 mb-4" style="min-height: 60vh;">
            <div class="col-xl-3 col-lg-4 col-md-4 px-0">
                <div class="card py-0 card-body h-100 px-0 pt-3">

                    <div class="text-center font-size-24 p-1">@Model.User.FullName</div>
                    <div class="text-center font-size-15">@Model.User.EmailAddress</div>
                    <div class="text-center font-size-15">@Model.User.PhoneNumber</div>

                    <div class="mx-2 mb-2 d-flex align-items-center justify-content-center">
                        @foreach (var roleName in Model.User.RoleNames)
                        {
                            <a href="javascript: void(0);"
                               class="badge badge-primary">@roleName.ToLower()</a>
                        }

                    </div>

                    <div class="nav flex-column nav-pills mt-5" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link active" id="v-pills-personal-tab" data-toggle="pill" href="#v-pills-personal" role="tab" aria-controls="v-pills-personal" aria-selected="true">Personal Information</a>
                        <a class="nav-link" id="v-pills-address-tab" data-toggle="pill" href="#v-pills-address" role="tab" aria-controls="v-pills-address" aria-selected="true">Address Information</a>
                        <a class="nav-link" id="v-pills-school-tab" data-toggle="pill" href="#v-pills-school" role="tab" aria-controls="v-pills-school" aria-selected="false">School Information</a>
                        <a class="nav-link" id="v-pills-duties-tab" data-toggle="pill" href="#v-pills-duties" role="tab" aria-controls="v-pills-duties" aria-selected="false">Duties</a>
                        <a class="nav-link" id="v-pills-subjects-tab" data-toggle="pill" href="#v-pills-subjects" role="tab" aria-controls="v-pills-subjects" aria-selected="false">Progress Reports</a>
                        <a class="nav-link" id="v-pills-reports-tab" data-toggle="pill" href="#v-pills-reports" role="tab" aria-controls="v-pills-reports" aria-selected="false">Progress Reports</a>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-8" style="flex-grow: 1;">
                <div class="card h-100">

                    <div class="card-body" [ngClass]="{'bg-gray': activeMenuItem?.label === 'Statements'}">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-personal" role="tabpanel" aria-labelledby="v-pills-personal-tab">
                                <form name="profileForm" role="form" class="form-horizontal">
                                    <div class="row m-0 p-0">
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">First name</label>
                                                <input placeholder="e.g " type="text" value="@Model.User.Name" class="form-control" name="Name" required maxlength="@AbpUserBase.MaxNameLength">

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">Last name</label>
                                                <input placeholder="unit no." type="text" value="@Model.User.Surname" class="form-control" name="Surname" required maxlength="@AbpUserBase.MaxSurnameLength">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-0 p-0">
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">Email address</label>
                                                <input type="text" placeholder="e.g Port Elizabeth" value="@Model.User.EmailAddress" class="form-control" name="EmailAddress" required maxlength="@AbpUserBase.MaxNameLength">

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">Phone number</label>
                                                <input type="text" placeholder="e.g Port Elizabeth" value="@Model.User.PhoneNumber" class="form-control" name="PhoneNumber" required maxlength="@AbpUserBase.MaxNameLength">

                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="v-pills-address" role="tabpanel" aria-labelledby="v-pills-address-tab">
                                <form name="profileForm" role="form" class="form-horizontal">
                                    <div class="row m-0 p-0">
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">Address line 1</label>
                                                <input placeholder="street ot house no." type="text" value="@Model.User.AddressLine1" class="form-control" name="Name" required maxlength="@AbpUserBase.MaxNameLength">

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">Address line 2</label>
                                                <input placeholder="unit no." type="text" value="@Model.User.AddressLine2" class="form-control" name="Surname" required maxlength="@AbpUserBase.MaxSurnameLength">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-0 p-0">
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">City</label>
                                                <input type="text" placeholder="e.g Port Elizabeth" value="@Model.User.City" class="form-control" name="Name" required maxlength="@AbpUserBase.MaxNameLength">

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="px-1 col-form-label">Province</label>
                                                <select name="ProvinceId" class="form-control">
                                                    <option value="">Select Province</option>
                                                    @foreach (var province in Model.Provinces)
                                                    {
                                                        <option value="@province.Id">@province.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="v-pills-school" role="tabpanel" aria-labelledby="v-pills-school-tab">
                                <form name="profileForm" role="form" class="form-horizontal">
                                    <div class="row m-0 p-0">
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">First name</label>
                                                <input placeholder="e.g " type="text" value="@Model.User.Name" class="form-control" name="Name" required maxlength="@AbpUserBase.MaxNameLength">

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">Last name</label>
                                                <input placeholder="unit no." type="text" value="@Model.User.Surname" class="form-control" name="Surname" required maxlength="@AbpUserBase.MaxSurnameLength">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-0 p-0">
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">Email address</label>
                                                <input type="text" placeholder="e.g Port Elizabeth" value="@Model.User.EmailAddress" class="form-control" name="EmailAddress" required maxlength="@AbpUserBase.MaxNameLength">

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group required">
                                                <label class="col-form-label">Phone number</label>
                                                <input type="text" placeholder="e.g Port Elizabeth" value="@Model.User.PhoneNumber" class="form-control" name="PhoneNumber" required maxlength="@AbpUserBase.MaxNameLength">

                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="v-pills-duties" role="tabpanel" aria-labelledby="v-pills-duties-tab">

                            </div>
                            <div class="tab-pane fade" id="v-pills-subjects" role="tabpanel" aria-labelledby="v-pills-subjects-tab">

                            </div>
                            <div class="tab-pane fade" id="v-pills-reports" role="tabpanel" aria-labelledby="v-pills-reports-tab">

                            </div>
                        </div>
                       
                        
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>