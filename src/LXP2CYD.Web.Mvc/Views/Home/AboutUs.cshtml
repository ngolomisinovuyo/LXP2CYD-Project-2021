<!-- inner banner -->
<div class="inner-banner">
    <section class="w3l-breadcrumb">
        <div class="container">
            <h4 class="inner-text-title font-weight-bold text-white mb-sm-3 mb-2">About Us</h4>
            <ul class="breadcrumbs-custom-path">
                <li><a asp-controller="Home" asp-action="Home">Home</a></li>
                <li class="active"><span class="fa fa-chevron-right mx-2" aria-hidden="true"></span>About Us</li>
            </ul>
        </div>
    </section>
</div>
<!-- //inner banner -->
<!-- about section -->
<section class="video-section py-5">
    <div class="container py-md-5 py-4">
        <div class="row">
            <div class="col-lg-6 about-right-faq align-self pr-lg-5">
                <h3 class="title-big">Our Mission is to Provide World‑class Education,
                Access to latest job listings, and 
                Strong Social cohesion,
                </h3>
                <p class="mt-3">
                    Visit our center to find out how.
                </p>
            </div>
        </div>
    </div>
</section>
<!-- //about section -->

<!-- stats -->
<section class="w3_stats pb-5" id="stats">
    <div class="container pb-md-5 pb-4 pt-4">
        <div class="w3-stats">
            <div class="row text-center">
                <div class="col-lg-3 col-sm-6">
                    <div class="counter">
                        <div class="timer count-title count-number" data-to="@Model.NoOfAccounts" data-speed="1500"></div>
                        <p class="count-text">Learners & counting</p>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 mt-sm-0 mt-4">
                    <div class="counter">
                        <div class="timer count-title count-number" data-to="@Model.Programmes.Count()" data-speed="1500"></div>
                        <p class="count-text">Total programmes</p>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 mt-lg-0 mt-4">
                    <div class="counter">
                        <div class="timer count-title count-number" data-to="7600" data-speed="1500"></div>
                        <p class="count-text">Successful Job seekers</p>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 mt-lg-0 mt-4">
                    <div class="counter border-right-0">
                        <div class="timer count-title count-number" data-to="36" data-speed="1500"></div>
                        <p class="count-text">Walk in patrons</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //stats -->

<!-- about-bootom grids -->
<section class="w3l-bottom-about py-5">
