
@using LXP2CYD.Web.Models.Common.Modals
@using LXP2CYD.Web.Models.Settings.Regions
@model EditRegionModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditRegion")))
<form name="RegionEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Region.Id" />
    <div class="modal-body">
        <div class="mt-4">
            <div id="create-region-details">
                <div class="form-group required">
                    <label class="px-1 col-form-label">@L("Name")</label>
                    <div class="col-md-12">
                        <input placeholder="e.g Mathatha Region" value="@Model.Region.Name" type="text" class="form-control" name="Name" required minlength="2">
                    </div>
                </div>
                <div class="form-group">
                    <label class="px-1 col-form-label">@L("Description")</label>
                    <div class="col-md-12">
                        <textarea placeholder="Describe region here..." value="@Model.Region.Description"  rows="2" class="form-control" name="Description"></textarea>
                    </div>
                </div>
                <div class="form-group required">
                    <label class="px-1 col-form-label">Province</label>
                    <div class="col-md-12">
                        <select name="ProvinceId" value="@Model.Region.Id" class="form-control">
                            <option value="">Select Province</option>
                            @foreach (var province in Model.Provinces)
                            {
                                if (province.Id == Model.Region.ProvinceId)
                                {
                                    <option selected value="@province.Id">@province.Name</option>
                                }
                                else
                                {
                                    <option selected value="@province.Id">@province.Name</option>
                                }

                            }
                        </select>
                    </div>
                </div>
            </div>

        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Regions/_EditModal.js" asp-append-version="true"></script>
