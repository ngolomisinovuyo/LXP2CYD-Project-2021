
@using LXP2CYD.Web.Models.Common.Modals
@using LXP2CYD.Web.Models.Settings.Regions
@model RegionListViewModel
@{
    Layout = null;
}
<div class="modal fade" id="RegionCreateModal" tabindex="-1" role="dialog" aria-labelledby="RegionCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewRegion")))
            <form name="regionCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="mt-4">
                        <div id="create-region-details">
                            <div class="form-group required">
                                <label class="px-1 col-form-label">@L("Name")</label>
                                 <input placeholder="e.g Mathatha Region" type="text" class="form-control" name="Name" required minlength="2">
                            </div>
                            <div class="form-group">
                                <label class="px-1 col-form-label">@L("Description")</label>
                                <div class="col-md-12">
                                    <textarea placeholder="Describe region here..." rows="2" class="form-control" name="Description"></textarea>
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="px-1 col-form-label">Province</label>
                                <div class="col-md-12">
                                    <select name="ProvinceId" class="form-control">
                                        <option value="">Select Province</option>
                                        @foreach (var province in Model.Provinces)
                                        {
                                            <option value="@province.Id">@province.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
